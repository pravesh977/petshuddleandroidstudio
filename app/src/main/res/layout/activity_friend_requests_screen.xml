<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/requesterRecyclerView"-->
<!--        >-->
<!--    </androidx.recyclerview.widget.RecyclerView>-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewFriendsRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friend Requests"
        style="@style/PetsListStyle"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ListView
        app:layout_constraintTop_toBottomOf="@id/textViewFriendsRequest"
        app:layout_constraintBottom_toTopOf="@id/goBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requesterListView"
        android:layout_weight="1"
        />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/MainButtons"
        android:backgroundTint="#E85E5A"
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="cancelRequestPage"
        android:layout_gravity="center"
        />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>