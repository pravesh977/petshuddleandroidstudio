<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetsHuddle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#49E4F5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MainButtons" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--        <item name="android:textColor">#5331F5</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="color">#F5DD31</item>
        <item name="android:backgroundTint">#71E798</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">100dp</item>
    </style>
    <style name="BackButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:radius">100dp</item>
    </style>
    <style name="FormStyle">
<!--        <item name="android:textColor">#E64438</item>-->
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@color/white</item>
    </style>
    <style name="NormalTextViewStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>